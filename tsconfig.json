{
  "compileOnSave": false,
  "compilerOptions": {
    // --- Tus opciones existentes ---
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true, // A menudo no necesario en proyectos Angular base, pero lo dejamos si lo tenías
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022", // Cambiado de 'preserve' a 'ES2022' para builds de navegador estándar
    "useDefineForClassFields": false, // Necesario para compatibilidad con decoradores
    "lib": [ // Añadidas libs estándar si faltaban
      "ES2022",
      "dom"
    ],
    // --- Opciones base recomendadas ---
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node" 
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    // "typeCheckHostBindings": true, // A menudo redundante con strictTemplates
    "strictTemplates": true
  }

}